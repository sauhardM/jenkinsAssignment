pipeline{
  agent any
    environment{
  notifyEmail = "mishra.sauhard@gmail.com"
}
  tools{
    maven 'maven_home'
  }
  triggers{
    cron('0 06 * * *')
  }
  stages{
    stage("code checkout pipeline"){
      steps{
        bat "echo hi"
      }
    }
    stage("code build pipeline"){
      steps{
        bat "mvn clean"
      }
    }
    stage("unit test pipeline"){
      steps{
        bat "mvn test"
      }
    }
}
post{
  success{
    bat "echo passed"
    }
  }
}
